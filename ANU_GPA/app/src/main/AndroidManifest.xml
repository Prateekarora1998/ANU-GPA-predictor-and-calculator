<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ANU_GPA">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="ANU GPA"
        android:roundIcon="@drawable/ic_school_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Password"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".PasswordEntry"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".PasswordSet"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".About" />
        <activity android:name=".FeedbackThanks" />
        <activity android:name=".Settings" />
        <activity android:name=".GiveFeedback"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Home" />
        <activity android:name=".Update"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".PermutationResults"
            android:screenOrientation="portrait"/>
        <activity android:name=".GPACalc"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".PermutationCalc"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>