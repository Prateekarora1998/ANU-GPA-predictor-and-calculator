<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiveFeedback">

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedBackTextView"
        android:layout_marginTop="25dp"
        android:text="Rate the app you are currently using."
        android:textColor="#000000"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/feedbackTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingTextView"
        android:layout_marginTop="75dp"
        android:text="Give the feedback about the app."
        android:textColor="#000000"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/feedbackEditText"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_below="@+id/feedbackTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:hint="Enter the feedback"
        android:maxLines="8"
        android:minLines="1"
        android:singleLine="false" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/feedbackEditText"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/submitButton"
        android:background="@drawable/buttons"
        android:textColor="#0A0A0A"
        android:text="Submit"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:indeterminate="false"
        android:isIndicator="false"
        android:max="5"
        android:numStars="5"
        android:progress="0"
        android:stepSize="1" />

    <TextView
        android:id="@+id/feedBackTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Feedback"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>